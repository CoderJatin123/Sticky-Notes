<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="wrap_content"
                                                   android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="10dp"
            android:id="@+id/cardview_item" android:layout_margin="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                <TextView
                        android:padding="5dp"
                        android:text="@string/textview"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content" android:id="@+id/Title_Text_item" android:textSize="27sp"
                        android:singleLine="true" android:fontFamily="@font/droid_sans"
                        android:layout_marginTop="5dp" android:layout_marginStart="5dp"
                        android:layout_marginBottom="10dp"/>
                <ImageButton

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:id="@+id/more_button"
                        android:layout_toEndOf="@id/Title_Text_item"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_baseline_more"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="5dp" android:layout_marginEnd="10dp"
                />
            </RelativeLayout>
            <TextView
                    android:text="TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/Body_Text_item"
                    android:padding="5dp" android:textSize="17sp"
                    android:fontFamily="@font/droid_sans" android:maxLines="3"
                    android:minLines="2" android:layout_margin="5dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>